<div style="margin: auto">
    <h1 class="h1">Edit Course</h1>
    <form action="/courses/edit" method="POST">
        <div class="my-1">
            <input type="text" name="title" value="<%= course.title %>" required>
        </div>
        <div class="my-1">
            <input type="number" name="price" min="1" value="<%= course.price %>" required>
        </div>
        <div class="my-1">
            <input type="text" name="url" value="<%= course.url %>" required>
        </div>
        <input type="hidden" name="id" value="<%= course.id %>">
        <input name="_csrf" type="hidden" value="<%= csrf%>">

        <div class="my-1">
            <button>Edit</button>
        </div>
    </form>
</div>
